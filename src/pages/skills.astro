---
import { AtcoderGraph } from '../components/atcoder-graph.tsx';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Itsuki54's Skills" description="Showcasing the skill set of Itsuki54 and AtCoder statistics.">
  <h2 class="bg-gradient-to-r from-[#f9d423] to-[#ff4e50] bg-clip-text text-transparent text-5xl text-center mb-8 font-semibold">Skills</h2>
  <ul class="flex flex-wrap justify-center list-none p-0 gap-6">
    <li class="bg-black/20 border-2 border-white/30 rounded-xl p-4 px-8 text-2xl text-white transition-all duration-300 backdrop-blur-[10px] hover:bg-black/40 hover:border-[#f9d423] hover:-translate-y-2.5 hover:shadow-[0_4px_15px_rgba(249,212,35,0.5)]">JavaScript</li>
    <li class="bg-black/20 border-2 border-white/30 rounded-xl p-4 px-8 text-2xl text-white transition-all duration-300 backdrop-blur-[10px] hover:bg-black/40 hover:border-[#f9d423] hover:-translate-y-2.5 hover:shadow-[0_4px_15px_rgba(249,212,35,0.5)]">TypeScript</li>
    <li class="bg-black/20 border-2 border-white/30 rounded-xl p-4 px-8 text-2xl text-white transition-all duration-300 backdrop-blur-[10px] hover:bg-black/40 hover:border-[#f9d423] hover:-translate-y-2.5 hover:shadow-[0_4px_15px_rgba(249,212,35,0.5)]">React</li>
    <li class="bg-black/20 border-2 border-white/30 rounded-xl p-4 px-8 text-2xl text-white transition-all duration-300 backdrop-blur-[10px] hover:bg-black/40 hover:border-[#f9d423] hover:-translate-y-2.5 hover:shadow-[0_4px_15px_rgba(249,212,35,0.5)]">Next.js</li>
    <li class="bg-black/20 border-2 border-white/30 rounded-xl p-4 px-8 text-2xl text-white transition-all duration-300 backdrop-blur-[10px] hover:bg-black/40 hover:border-[#f9d423] hover:-translate-y-2.5 hover:shadow-[0_4px_15px_rgba(249,212,35,0.5)]">Astro</li>
    <li class="bg-black/20 border-2 border-white/30 rounded-xl p-4 px-8 text-2xl text-white transition-all duration-300 backdrop-blur-[10px] hover:bg-black/40 hover:border-[#f9d423] hover:-translate-y-2.5 hover:shadow-[0_4px_15px_rgba(249,212,35,0.5)]">C++</li>
  </ul>

  <div class="grid grid-cols-2 gap-8 justify-items-center mt-12 md:grid-cols-1">
    <div class="relative bg-white/10 rounded-[15px] overflow-hidden p-4 shadow-[0_4px_15px_rgba(0,0,0,0.2)] transition-all duration-300 max-w-full text-center hover:-translate-y-2.5 hover:shadow-[0_6px_20px_rgba(255,255,255,0.3)]">
      <img src="../profile-details.svg" alt="Profile Details" class="max-w-full h-auto" />
    </div>
    <div class="relative bg-white/10 rounded-[15px] overflow-hidden p-4 shadow-[0_4px_15px_rgba(0,0,0,0.2)] transition-all duration-300 max-w-full text-center hover:-translate-y-2.5 hover:shadow-[0_6px_20px_rgba(255,255,255,0.3)]">
      <img src="../top-langs.svg" alt="Top Languages Card" class="max-w-full h-auto" />
    </div>
    <div class="relative bg-white/10 rounded-[15px] overflow-hidden p-4 shadow-[0_4px_15px_rgba(0,0,0,0.2)] transition-all duration-300 max-w-full text-center hover:-translate-y-2.5 hover:shadow-[0_6px_20px_rgba(255,255,255,0.3)]">
      <img src="../github-stats.svg" alt="GitHub Stats Card" class="max-w-full h-auto" />
    </div>
    <div class="relative bg-white/10 rounded-[15px] overflow-hidden p-4 shadow-[0_4px_15px_rgba(0,0,0,0.2)] transition-all duration-300 max-w-full text-center hover:-translate-y-2.5 hover:shadow-[0_6px_20px_rgba(255,255,255,0.3)]">
      <img src="../trophy.svg" alt="Trophy" class="max-w-full h-auto" />
    </div>
  </div>
  <h2 class="bg-gradient-to-r from-[#f9d423] to-[#ff4e50] bg-clip-text text-transparent text-5xl text-center mb-8 font-semibold">AtCoder Stats</h2>
  <div class="text-center mt-8 text-white">
   <AtcoderGraph client:only/>
  </div>
</Layout>
